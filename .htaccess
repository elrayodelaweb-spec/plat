# .htaccess (Ra赤z del Proyecto)
Options -Indexes
Options +FollowSymlinks
RewriteEngine On

# ===================================================================
# 1. Seguridad y Acceso
# ===================================================================

# Proteger archivos sensibles (env, json, etc.)
<FilesMatch "\.(env|json|lock|git|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger carpetas sensibles (acceso prohibido)
RewriteRule ^(includes|config|storage|db)/ - [F,L]

# ===================================================================
# 2. Redirecciones (HTTPS y WWW)
# ===================================================================

# Redirigir a HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# WWW a non-WWW
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]


# ===================================================================
# 3. Redirecci車n al directorio 'public' (La clave del problema)
# Si la solicitud no es a un archivo o carpeta real, enviarla a la carpeta public.
# Esto asegura que la ra赤z del dominio entre al controlador principal.
# ===================================================================
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ public/$1 [L]


# ===================================================================
# 4. Configuraci車n PHP y Cach谷
# ===================================================================

# PHP settings (Aplica a todo el proyecto)
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value max_input_time 300

# Compresi車n
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript
</IfModule>

# Cache
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
